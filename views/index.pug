extends layout

block content
  h1= title
  p Welcome to #{title}

  div(class="content")
    h2(class="h2")= "Recent Posts"

      each val in data
        div(class="post")
          p Author: #{author}
          p Title: #{postTitle}
          p Content: #{content}

  div(class="content")
    h2(class="h2")= "Create a New Post!"
      form(action='/new', method='POST')
        div
          label(for="author")="Author Name:"
          input(name="author", id="author", value="")
          br
          label(for="postTitle")="Blog Title:"
          input(name="postTitle", id="postTitle", value="")
          br
          label(for="content")="Blog Content:"
          input(name='content', id="content", value='')
        div
        button(type='submit')
          p Submit

